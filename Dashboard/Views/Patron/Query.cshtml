@model Dashboard.ViewModels.PatronCounterQueryViewModel
@{
    ViewBag.Title = "Query";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <h2>Patron Counter Ad-Hoc Query Tool</h2>
        @using (Html.BeginForm("Query", "Patron", FormMethod.Post, new { @class = "bs-docs-example form-horizontal" }))
        {
            <div class="well">
                <h4>Query Options</h4>
                <div class="control-group">
                    @Html.LabelFor(m => m.StartDateTime, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(m => m.StartDateTime)
                    </div>
                </div>
            
                <div class="control-group">
                    @Html.LabelFor(m => m.EndDateTime, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(m => m.EndDateTime)
                    </div>
                </div>
                
                <div class="control-group">
                    @Html.LabelFor(m => m.EndDateTime, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(m => m.EndDateTime)
                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                      <button type="reset" class="btn">Reset</button>
                      <button type="submit" class="btn btn-primary" id="ExecuteQuery">Execute Query&nbsp;<i class="icon-play icon-white"></i></button>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row-fluid">
        <div class="results">

        </div>
    </div>
</div>

