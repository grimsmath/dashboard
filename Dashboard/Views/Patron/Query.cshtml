    $(function () {
        $('#StartDateTime').datetimepicker({
            format: 'mm-dd-yyyy h:ii p',
            showMeridian: 'true'
        });

        $('#EndDateTime').datetimepicker({
            format: 'mm-dd-yyyy h:ii p',
            showMeridian: 'true'
        });

